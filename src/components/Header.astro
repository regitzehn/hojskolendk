<header class="fixed top-0 left-0 w-full flex justify-between items-center px-8 py-4 bg-transparent z-50">
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img src="src/assets/images/logo.svg" alt="HÖJSKOLENDK logo" class="h-8" />
    </a>
  
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-6 text-[var(--color-hvid)] font-sans uppercase tracking-wide text-[16px]">
      <a href="#tilmeld" class="btn-outline">Tilmeld</a>
      <a href="#infomoder" class="btn-outline">Infomøder</a>
      <a href="/ophold" class="link">Højskoleophold</a>
      <a href="#priser" class="link">Priser</a>
      <a href="#omos" class="link">Om os</a>
    </nav>
  
    <!-- Burger Button -->
    <button id="burger" class="flex flex-col justify-between w-7 h-5 md:hidden cursor-pointer z-[60]" aria-label="Menu">
      <span class="block w-full h-[3px] rounded bg-[var(--color-hvid)] transition-all duration-300"></span>
      <span class="block w-full h-[3px] rounded bg-[var(--color-hvid)] transition-all duration-300"></span>
      <span class="block w-full h-[3px] rounded bg-[var(--color-hvid)] transition-all duration-300"></span>
    </button>
  
    <!-- Overlay (clickable background to close) -->
    <div id="overlay" class="fixed inset-0 bg-[rgba(0,0,0,0.3)] backdrop-blur-sm hidden md:hidden z-[40]"></div>
  
    <!-- Mobile Menu -->
    <nav
      id="mobileMenu"
      class="fixed top-0 right-0 h-screen w-0 overflow-hidden flex flex-col items-center justify-center gap-6 text-[var(--color-hvid)] transition-all duration-500 backdrop-blur-2xl bg-[rgba(54,47,51,0.6)] md:hidden z-[50]"
    >
      <a href="#tilmeld" class="btn-outline">Tilmeld</a>
      <a href="#infomoder" class="btn-outline">Infomøder</a>
      <a href="/ophold" class="link text-xl">Højskoleophold</a>
      <a href="#priser" class="link text-xl">Priser</a>
      <a href="#omos" class="link text-xl">Om os</a>
    </nav>
  
    <script>
      const burger = document.getElementById('burger');
      const menu = document.getElementById('mobileMenu');
      const overlay = document.getElementById('overlay');
      const lines = burger.querySelectorAll('span');
      const links = menu.querySelectorAll('a');
  
      function toggleMenu() {
        menu.classList.toggle('open');
        overlay.classList.toggle('hidden');
        lines[0].classList.toggle('rotate-45');
        lines[0].classList.toggle('translate-y-[8px]');
        lines[1].classList.toggle('opacity-0');
        lines[2].classList.toggle('-rotate-45');
        lines[2].classList.toggle('-translate-y-[8px]');
      }
  
      burger.addEventListener('click', toggleMenu);
      overlay.addEventListener('click', toggleMenu);
      links.forEach(link => link.addEventListener('click', toggleMenu));
    </script>
  
    <style>
      /* --- Buttons --- */
      .btn-outline {
        border: 3px solid var(--color-hvid);
        color: var(--color-hvid);
        background-color: transparent;
        border-radius: 9999px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        text-transform: uppercase;
        transition: all 0.3s ease;
      }
  
      .btn-outline:hover {
        background-color: var(--color-orange-accent);
        border-color: var(--color-hvid);
        color: var(--color-hvid);
      }
  
      /* --- Links --- */
      .link {
        color: var(--color-hvid);
        text-transform: uppercase;
        transition: color 0.2s ease;
      }
  
      .link:hover {
        color: var(--color-orange-accent);
      }
  
      /* --- Mobile Menu --- */
      #mobileMenu.open {
        width: 75%;
        max-width: 320px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
      }
    </style>
  </header>