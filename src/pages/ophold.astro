                    { src: "rejse3.png", title: "INDIEN<br>NEPAL<br>THAILAND<br>VIETNAM<br>SRI LANKA" },
                    { src: "rejse4.png", title: "HAWAII<br>AUSTRALIEN<br>JAPAN<br>BALI<br>GILI ISLANDS" },
                    { src: "rejse5.png", title: "MALDIVERNE<br>SRI LANKA<br>BALI<br>GILI ISLANDS" },
                    { src: "rejse6.png", title: "BRASILIEN<br>BOLIVIA<br>COLOMBIA<br>ECUADOR<br>PERU<br>ARGENTINA" },
