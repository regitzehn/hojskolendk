            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                {[
                    { src: "rejse9.png", title: "BALI<br>LOMBOK<br>GILI ISLANDS", label: "Sommerh√∏jskole" },
                    { src: "rejse10.png", title: "SYDKOREA<br>JAPAN", label: "Sommerh√∏jskole" },
                    { src: "rejse11.png", title: "JAPAN", label: "Sommerh√∏jskole" },
                ].map(({ src, title, label }) => (
                    <div class="flex-shrink-0 fade-up-on-scroll">
                        <div class="relative overflow-hidden rounded-2xl h-[400px]">
                            <img src={`/public/${src}`} alt={title} class="w-full h-full object-cover" />
                            <div class="absolute inset-0 bg-[rgba(0,0,0,0.35)]"></div>
                            <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4 gap-3">
                                <h3 class="h3 text-[var(--color-hvid)] uppercase tracking-wide leading-tight" set:html={title}></h3>
