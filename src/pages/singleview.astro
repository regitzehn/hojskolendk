---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Asien & Oceanien">

<!-- HERO SECTION -->
<section
  class="relative w-full min-h-[80vh] bg-cover bg-center text-[var(--color-hvid)] flex flex-col justify-end"
  style="background-image: url('src/assets/images/singleview.webp');"
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-[rgba(0,0,0,0.35)]"></div>

  <!-- Content Wrapper -->
  <div class="relative z-10 content-wrapper py-16 grid grid-cols-1 lg:grid-cols-2 gap-12 items-end">
    
    <!-- LEFT SIDE -->
    <div>
